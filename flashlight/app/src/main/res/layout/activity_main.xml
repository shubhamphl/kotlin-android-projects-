<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/torch_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/lightoff" />

    <Button
        android:id="@+id/btn_onoff"
        android:layout_width="124dp"
        android:layout_height="89dp"
        android:background="@drawable/rounded_btnoff"
        android:text="@string/btnon"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.817" />

    <Button
        android:id="@+id/blink1"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/style_blink1"
        android:text="SOS"
        android:textColor="#F7042D"
        android:textSize="30sp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_onoff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_onoff" />

    <Button
        android:id="@+id/blink2"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:text="BLINK"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/style_blink2"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_onoff"
        app:layout_constraintEnd_toStartOf="@+id/btn_onoff" />


    />



</androidx.constraintlayout.widget.ConstraintLayout>